.menu
    width 200px
    background-color #333
    position fixed
    left 0
    top 0
    bottom 0
    &-header
        display flex
        flex-direction column
        align-items center
        padding-bottom 20px

        &__avatar
            height 120px
            width 120px
            border-radius 50%
            border 5px solid #f0f0f0
            background #aaa
            margin-top 20px

        &__title
            font-size 20px
            margin-top 20px
            color #f0f0f0

    &-button
        margin 0 auto
        margin-bottom 20px
        border-radius 40px
        text-align center
        padding 15px 25px
        background-color #94dab7
        max-width 150px
        color white
        font-size 14px

    &-nav
        margin-top 40px
        &__list
            width 100%

        &__item
            width 100%
            padding 10px 20px
            color #f0f0f0
            font-size 14px
            cursor pointer
            transition .3s all
            &:hover
                background-color #505050
            &.active
                background-color #505050
                color white
